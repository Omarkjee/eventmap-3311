{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Composite project requirements */
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./"  // Set to project root if 'vite.config.ts' cannot be moved
  },
  "include": ["vite.config.ts"]
}
