{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",

    /* Composite project requirements */
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src"  // Ensures only 'src' files are used as root source
  },
  "include": ["src/**/*"],  // Explicitly include all files in 'src'
  "exclude": ["node_modules"]
}
