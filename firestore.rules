rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Events collection
    match /events/{eventId} {
      allow read: if true;  // Allows anyone to read events
      allow write: if request.auth != null;  // Allows writes only if the user is authenticated
    }

    // Users collection
    match /users/{userId} {
      // Allow users to read their own data
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to modify their RSVP events array (only for their own user document)
      allow update: if request.auth != null && request.auth.uid == userId &&
                    request.resource.data.keys().hasOnly(['RSVP_events']) && 
                    // Ensure only the RSVP_events field is being updated
                    request.resource.data.RSVP_events is list;
    }
  }
}
